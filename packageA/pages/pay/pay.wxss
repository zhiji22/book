.address-box {
  /* height: 300rpx; */
  padding: 35rpx 25rpx 0;
  font-size: 30rpx;
  position: relative;
}
.address-box image {
  width: 37rpx;
  height: 37rpx;
  margin-right: 12rpx;
}
.address-box .icon {
  font-size: 35rpx;
  position: absolute;
  top: 42rpx;
  right: 26rpx;
}

.address-box .item {
  display: flex;
  justify-content: space-between;
}
.address-box .item .phone {
  position: relative;
  top: -8rpx;
  margin-right: 70rpx;
}
.address-box .item:last-of-type {
  padding: 30rpx 0;
}
/* 收货地址下划线 */
.address-box::after {
  display: block;
  content: "";
  height: 5rpx;
  margin:  10rpx 0 20rpx -25rpx;
  background: repeating-linear-gradient(-45deg, #ff6c6c , #ff6c6c 20%, transparent 0, transparent 25%, #1989fa 0, #1989fa 45%, transparent 0, transparent 50%);
}

/* 商品 */

.goods-box .bg {
  width: 700rpx;
  height: 4rpx;
  margin: -5rpx auto 0;
  background-color: rgb(221, 221, 221);
}
.goods-box .txt {
  display: block;
  font-weight: 700;
  font-size: 36rpx;
  color: rgb(92, 92, 92);
  margin: 20rpx 0 0 30rpx;
}
.goods-box .goods-serve {
  background-color: #FAFAFA;
  height: 300rpx;
  padding: 25rpx 30rpx;
  box-sizing: border-box;
}
.goods-box .goods-serve .item {
  display: flex;
  font-size: 34rpx;
  justify-content: space-between;
  margin-bottom: 45rpx;
}

/* 计算 */
.calculation {
  background-color: #fafafa;
  width: 100%;
  height: 140rpx;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
}
.van-submit-bar {
  margin-bottom: 10rpx;
}