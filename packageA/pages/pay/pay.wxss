.address-box {
  /* height: 300rpx; */
  padding: 35rpx 25rpx 0;
  font-size: 30rpx;
  position: relative;
}
.address-box image {
  width: 37rpx;
  height: 37rpx;
  margin-right: 12rpx;
}
.address-box .icon {
  font-size: 35rpx;
  position: absolute;
  top: 42rpx;
  right: 26rpx;
}

.address-box .item {
  display: flex;
  justify-content: space-between;
}
.address-box .item .phone {
  position: relative;
  top: -8rpx;
  margin-right: 70rpx;
}
.address-box .item:last-of-type {
  padding: 30rpx 0;
}
/* 收货地址下划线 */
.address-box::after {
  display: block;
  content: "";
  height: 5rpx;
  margin:  10rpx 0 20rpx -25rpx;
  background: repeating-linear-gradient(-45deg, #ff6c6c , #ff6c6c 20%, transparent 0, transparent 25%, #1989fa 0, #1989fa 45%, transparent 0, transparent 50%);
}