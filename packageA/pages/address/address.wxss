.address {
  background-color: #F7F8FA;
  width: 100%;
  height: 1060rpx;
}
.address .btn-box {
  width: 100%;
  background-color: #fff;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
  position: fixed;
  left: 0;
  bottom: 0;
}
.address .btn-box .van-button{
  width: 100%;
  height: 90rpx;
}
/* 内容部分 */
.address .content {
  padding: 40rpx 25rpx 220rpx;
}
.address .content .txt {
  display: block;
  color: #969799;
  font-size: 35rpx;
  margin-bottom: 20rpx;
}
/* 每个收获地址 */
.address .content .address-box {
  padding: 30rpx 20rpx;
  display: flex;
  align-items: center;
  border-radius: 25rpx;
  background-color: #fff;
  margin-bottom: 30rpx;
}
.address-box .name-phone text {
  font-size: 35rpx;
  margin-right: 22rpx;
}
.address-box .addr-box {
  margin-top: 16rpx;
  font-size: 30rpx;
}
.van-tag {
  position: relative;
  top: -5rpx;
}