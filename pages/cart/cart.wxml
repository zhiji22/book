<view style="padding-bottom: 118rpx;">
  <view class="address-box">
    <view wx:if="{{false}}" style="margin: 0 15rpx;">
      <view class="item">
        <view style="display: flex;">
          <image src="/static/receive .png" />
          <text>Michael</text>
        </view>
        <view style="display: flex;" style="margin-right: 70rpx;">
          <image src="/static/phone.png" />
          <text class="phone">(+001)12555555324</text>
          </view>
      </view>
      <view class="item" style="justify-content: flex-start;">
        <image src="/static/address.png" />
        <text>美国洛杉矶芝加哥华盛顿纽约广场</text>
      </view>
      <van-icon name="arrow" class="icon" />
    </view>
    <view wx:else class="select-addr">
      <view>
        <van-button color="#1989fa" type="primary" size="small" round bindtap="handleSelectAddress">+选择收货地址</van-button>
      </view>
    </view>
  </view>
  <!-- 商品 -->
  <view class="goods-box">
    <view class="cart-icon">
      <image src="/static/cart2.png" class="img"/>
      <text class="txt">购物车</text>
    </view>
    <view class="goods">
      <view wx:for="{{goodsList}}" wx:key="index" class="goods-item" >
        <van-card
            num="2"
            tag="折扣"
            price="{{item.discount?item.discount:item.price}}"
            desc="{{item.description}}"
            title="{{item.title}}"
            thumb="{{item.src}}"
            origin-price="{{item.discount?item.price:''}}"
          >
            <view slot="tags" class="tags">
              <van-button size="mini">{{item.type}}</van-button>
            </view>
            <view slot="footer" class="btn-box">
              <van-button size="mini">-</van-button>
              <van-button size="mini">+</van-button>
            </view>
            <view slot="footer" class="radio-box">
              <radio value="" />
            </view>
        </van-card>
      </view>
      <view class="no-more">
        <text>暂无更多...</text>
      </view>
    </view>
  </view>
  <!-- 计算 -->
  <view>
    <van-submit-bar
    price="{{ 3050 }}"
    button-text="提交订单"
    bind:submit="onClickButton"
    >
      <radio class="radio-bottom" value="" >全选</radio>
    </van-submit-bar>
  </view>
</view>
