.login-after .head-picture {
  width: 100%;
  height: 370rpx;
  background-color: #8639FF;
  overflow: hidden;
}
/* 头像部分 */
.login-after .head-picture .img-box {
  width: 4.5rem;
  height: 7.2rem;
  text-align: center;
  margin: auto;
  margin-top: 60rpx;
  font-size: 30rpx;
  color: #fff;
}
.login-after .head-picture .img-box .txt {
  display: block;
  margin-top: 20rpx;
}
/* 内容部分 */
.login-after .content {
  padding: 1rpx 35rpx 40rpx;
  background-color: #f7f8fa;
}
/* 购物车 足迹等 */
.login-after .content .number-box {
  width: 100%;
  height: 120rpx;
  margin-top: -43rpx;
  border-radius: 20rpx;
  overflow: hidden;
}
.login-after .content .number-box .number-item {
  font-size: 33rpx;
}
/* 我的订单 */
.login-after .content .my-order {
  margin-top: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  overflow: hidden;
}
.login-after .content .my-order .txt-box {
  display: flex;
  justify-content: space-between;
  font-size: 33rpx;
  padding: 27rpx 30rpx;
}
/* 用户其他信息 */
.login-after .content .info {
  margin-top: 20rpx;
  background-color: #fff;
  height: 268rpx;
  border-top-left-radius: 20rpx;
  border-top-right-radius: 20rpx;
}
.login-after .content .info .info-item {
  display: flex;
  justify-content: space-between;
  padding: 23rpx 30rpx;
  font-size: 33rpx;
}